@using LTW_Nhom8_ShopTBDT.Models;
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout_sanpham.cshtml";
}

<center><h2 class=""> GIỎ HÀNG <i class="fa fa-shopping-cart"></i></h2></center>
<br />
<div class="khung">
    <center>
        <table class="table-hover table-bordered divGioHang">
            <tr style="">
                <th> Mã SP</th>

                <th> Tên SP</th>

                <th> Ảnh bìa</th>

                <th> Đơn giá</th>

                <th> Số lượng</th>

                <th> Thành tiền</th>
            </tr>



            @foreach (var item in Model)
            {
                <tr class="font-italic">
                    <td> @item.iMasp</td>

                    <td> @item.sTensp</td>

                    <td> <img src="@Url.Content("~/Content/img/" + item.sAnhBia)" width="100" height="100" /></td>

                    <td>  @String.Format("{0:0,0}", item.dDonGia) VNĐ</td>

                    <td> @item.iSoLuong</td>

                    <td>   @String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>


                </tr>

            }


            <tr>
                <td colspan="5" style="text-align:center">
                    <h4>Tổng tiền</h4>
                </td>
            </tr>
            <tr>
                <td colspan="5" style="text-align:right">

                    @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang")
                </td>
                <td colspan="1" style="text-align:right;color:blue">
                    @using (Html.BeginForm("DatHang", "GioHang", new { @class = "" }))
                    {
                        <input type="submit" value="Đặt hàng" class="btn btn-danger"  />
                    }
                </td>
            </tr>
        </table>
    </center>
</div>

@*Css giỏ hàng*@
<style type="text/css">
    .divGioHang {
        border: 2px solid #EEEEEE;
    }

        .divGioHang td {
            padding: 20px;
            border: 2px solid #EEEEEE;
            text-align: center;
        }

        .divGioHang th {
            text-align: center;
            padding:20px;
        }
        .khung{
            text-align:center;
        }
</style>

